package star;

public class Star {
	public static void main(String[] args) {
		for(int i = 0; i < 5; i++) {
			for(int j = 0; j < 4 - i; j++) {
				System.out.print(" ");
			}
			for(int k = 0; k < i * 2 + 1; k++) {
				System.out.print("*");
			}
			System.out.println();
		}
		
		for(int i = 4; i > 0; i--) {
			for(int j = 4; j >= i; j--) {
				System.out.print(" ");
			}
			for(int k = 0; k < i * 2 - 1; k++) {
				System.out.print("*");			
			}
			System.out.println();
		}
		
		for(int i = 2; i <= 9; i++) {
			for(int j = 1; j <= 9; j++) {
				System.out.printf("%d * %d = %d\n", i, j, i * j);
			}
		}
		
		double sum1 = 0;
		double sum2 = 0;
		
		for(int i = 1; i <= 100; i++) {
			sum1 += 1.0/i;
			System.out.println(i);
		}
		
		for(int i = 100; i >= 1; i--) {
			sum2 += 1.0/i;
			System.out.println(i);
		}
		
		if(sum1 == sum2) {
			System.out.println("같음");
		}
		else {
			System.out.println("다름");
		}
	}
}
